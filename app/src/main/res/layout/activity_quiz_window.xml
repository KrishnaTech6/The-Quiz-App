<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg"
    tools:context=".QuizWindow">


    <TextView
        android:id="@+id/totalQuestionstv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:text="@string/total_questions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/text_style" />

    <TextView
        android:paddingStart="@dimen/margin_start"
        android:paddingEnd="@dimen/margin_start"
        android:id="@+id/question"
        style="@style/text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here the question will Appear"
        app:layout_constraintBottom_toTopOf="@+id/ans_a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/totalQuestionstv" />

    <Button
        android:id="@+id/ans_a"
        style="@style/text_style"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="168dp"
        android:backgroundTint="#ffffff"
        android:text="Ans A"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginEnd="@dimen/margin_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/totalQuestionstv" />

    <Button
        android:backgroundTint="#ffffff"
        style="@style/text_style"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginEnd="@dimen/margin_start"
        android:id="@+id/ans_b"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Ans B"
        android:layout_marginTop="@dimen/margin_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/ans_a" />

    <Button
        android:backgroundTint="#ffffff"
        style="@style/text_style"
        android:layout_marginTop="@dimen/margin_start"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginEnd="@dimen/margin_start"
        android:id="@+id/ans_c"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Ans C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/ans_b" />

    <Button
        android:backgroundTint="#ffffff"
        style="@style/text_style"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginEnd="@dimen/margin_start"
        android:id="@+id/ans_d"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Ans D"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/margin_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ans_c" />

    <Button
        android:id="@+id/submit"
        style="@style/text_style"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/margin_start"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="@dimen/margin_start"
        android:text="Submit"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ans_d" />
</androidx.constraintlayout.widget.ConstraintLayout>